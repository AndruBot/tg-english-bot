# Environment selection (optional, set to dev/development/develop for development mode)
# ENV=dev

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# MongoDB Configuration
# For development, you can use local MongoDB or Docker Compose MongoDB
# MONGODB_URI=mongodb://admin:password@localhost:27017/english_test_bot_dev?authSource=admin

# Individual MongoDB settings (used if MONGODB_URI is not set)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DATABASE=english_test_bot_dev

# Bot Configuration
# Comma-separated list of admin Telegram IDs (e.g., "123456789,987654321")
ADMIN_TELEGRAM_ID=

# Maximum consecutive errors before test failure (default: 5)
MAX_CONSECUTIVE_ERRORS=5

