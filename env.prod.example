# Environment selection (optional, defaults to production in Docker)
ENV=production

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# MongoDB Configuration
# You can use MONGODB_URI or individual settings below
# For Docker Compose, use 'mongodb' as hostname (service name)
# MONGODB_URI=mongodb://admin:password@mongodb:27017/english_test_bot?authSource=admin

# Individual MongoDB settings (used if MONGODB_URI is not set)
# For Docker Compose, MONGO_HOST should be 'mongodb' (the service name)
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGODB_PORT=27017
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_password_in_production
MONGO_DATABASE=english_test_bot

# Bot Configuration
# Comma-separated list of admin Telegram IDs (e.g., "123456789,987654321")
ADMIN_TELEGRAM_ID=

# Maximum consecutive errors before test failure (default: 5)
MAX_CONSECUTIVE_ERRORS=5
